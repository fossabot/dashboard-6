<legend>Registrar emblema "<%= @badge.name %>"</legend>

<div class="students mosaic">
  <% @students.in_groups_of(6) do |group| %>

    <div class="row">

      <% group.each do |student| %>

        <div class="col-md-2 col-xs-6 student-box">
          <% if student %>
            <%= link_to register_badge_url(nickname: student.nickname, badge_id: @badge.id) do %>
              <img class="avatar" src="<%= student.image %>">
              <p class="data"><%= student.nickname %><br/>
                <small><%= student.name %></small>
              </p>
            <% end %>
          <% end %>
        </div>

      <% end %>

    </div>

  <% end %>
</div>
