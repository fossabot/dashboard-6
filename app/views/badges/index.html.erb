<legend>
  Listado de emblemas
  <%= link_to 'Nuevo emblema', new_badge_path, class: 'btn btn-primary pull-right' %>
</legend>

<% if @badges.empty? %>

  <div class="alert alert-info">
    <p>Aún no hay ningún emblema</p>
  </div>

<% else %>

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Imagen</th>
      <th>Emblema</th>
      <th>Destacado</th>
      <th>Descripción</th>
      <th>Otorgamientos</th>
      <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td>
          <img class="loom-badge" src="http://www.delucas.com.ar/loom/badges/<%= badge.slug %>.png"></td>
        </td>
        <td>
          <%= link_to badge.name, badge_path(badge.id) %>
        </td>
        <td>
          <%= badge.featured? ? "Si" : "No" %>
        </td>
        <td>
          <%= badge.description %>
        </td>
        <td>
          <%= badge.earnings.size %> veces
        </td>
        <td>
          <%= link_to "Editar", edit_badge_path(badge), class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>
