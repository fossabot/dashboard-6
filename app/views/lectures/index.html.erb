<legend>
  Listado de clases
  <%= link_to 'Nueva clase', new_lecture_url, class: 'btn btn-primary pull-right' %>
</legend>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Resumen</th>
    <th>Fecha</th>
  </tr>
  </thead>
  <tbody>
  <% @lectures.each do |lecture| %>
    <tr>
      <td>
        <%= link_to lecture.summary, lecture_details_url(lecture.id) %>
      </td>
      <td>
        <%= l lecture.date.in_time_zone('Buenos Aires') %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
