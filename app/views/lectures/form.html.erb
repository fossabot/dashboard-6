<% nav_add 'Aula', '#' %>
<% nav_add 'Clases', lectures_path %>
<% nav_add @lecture.summary, lectures_path(@lecture) unless @lecture.new_record? %>
<% nav_add @labels.title, '#' %>
<%= nav_render %>

<%= form_for @lecture do |f| %>

  <%= render :partial => 'shared/errors', locals: { f: f } %>

  <div class="form-group">
    <%= f.label :summary, 'Resumen', class: 'control-label' %>
    <%= f.text_field :summary, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date, 'Fecha', class: 'control-label' %>
    <%= f.date_select :date, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.check_box :required %>
    <%= f.label :required, 'Asistencia requerida', class: 'control-label' %>
  </div>

  <div class="form-group">
    <%= f.submit @labels.button, class: "btn btn-primary" %>
  </div>

<% end %>
