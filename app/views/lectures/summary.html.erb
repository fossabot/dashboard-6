<% nav_add 'Aula', '#' %>
<% nav_add 'Resumen de asistencia', '#' %>
<%= nav_render %>

<% if @lectures.empty? %>

  <div class="alert alert-info">
    <p>Aún no hay ninguna clase</p>
  </div>

<% else %>

  <table class="table table-hover attendance">
    <thead>
    <tr>
      <th>Estudiante</th>
      <% @lectures.each do |lecture| %>
        <th title="<%= lecture.summary %>"><%= lecture.date.strftime('%d/%m') %></th>
      <% end %>
      <th>Asistencia</th>
    </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
      <tr>
        <td>
          <% if student.current_membership.enabled? %>
            <%= link_to student.full_name, user_details_url(student.nickname) %>
          <% else %>
            <s>
              <%= link_to student.full_name, user_details_url(student.nickname) %>
            </s>
          <% end %>
        </td>
        <% @lectures.each do |lecture| %>
          <td>
            <% attendance = @attendances_per_student[student].find { |a| a.lecture == lecture }
               present = attendance && attendance.condition == 'present' %>
            <label class="label label-<%= present ? 'success' : 'danger' %>">
              <%= present ? '✔' : '✘' %>
            </label>
          </td>
        <% end %>
        <td>
          <%= (@attendances_per_student[student].size.to_d * 100 / @lectures.size).round(2) %>%
        </td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
    <th>Totales</th>
    <% @lectures.each do |lecture| %>
      <th><%= @attendances.select { |a| a.lecture == lecture && a.condition == 'present' }.size %></th>
    <% end %>
    </tfoot>
  </table>

<% end %>

<%= content_for :head do %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
<% end %>

<%= content_for :javascript do %>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="application/javascript"></script>

  <script type="application/javascript">
      $(function () {
          $('.attendance').DataTable({
              order: [[ 0, "asc" ]],
              paging: false,
              language: {
                  url: "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
              },
              columnDefs: [ {
                  targets: 'no-sort',
                  orderable: false,
              } ]
          });
      });
  </script>
<% end %>
