<legend>Registrar medición "<%= @reading.name %>"</legend>

PENDIENTE

<%= form_for Measurement.new, url: register_reading_url(@reading.slug) do |f| %>

  <%= f.hidden_field :reading_id, value: @reading.id %>

  <div class="form-group">
    <%= f.label :team_id, 'Equipo' %>
    <%= f.select :team_id, options_from_collection_for_select(@teams, :id, :name), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :value, 'Valor' %>
    <%= f.number_field :value, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Guardar medición", class: "btn btn-primary" %>
  </div>


<% end %>
