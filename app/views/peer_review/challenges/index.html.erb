<% nav_add 'Desafíos', '#' %>
<%= nav_render %>

<% if policy(PeerReview::Challenge).manage? %>
  <%= link_to 'Nuevo desafio', new_peer_review_challenge_path, class: 'btn btn-primary pull-right' %>
<% end %>

<section class="forks">

  <% if @challenges.empty? %>

    <div class="alert alert-info">
      <p>Aún no hay ningún desafío</p>
    </div>

  <% else %>

    <table class="challenges table table-striped">
      <thead>
      <tr>
        <th>Título</th>
        <th>Estado</th>
        <th>Dificultad</th>
        <th class="no-sort">&nbsp;</th>
      </tr>
      </thead>
      <tbody>
      <% @challenges.each do |challenge| %>
        <tr class="fork">
          <td>
            <%= link_to challenge.title, peer_review_challenge_path(challenge) %>
          </td>
          <td>
            <%= challenge.enabled? ? "Vigente" : "Finalizado" %>
          </td>
          <td>
            <% challenge.difficulty.times do %>
              <i class="fa fa-star" aria-hidden="true"></i>
            <% end %>
            <% (5 - challenge.difficulty).times do %>
              <i class="fa fa-star-o" aria-hidden="true"></i>
            <% end %>
          </td>
          <td>
            <% if policy(PeerReview::Challenge).manage? %>
              <%= link_to "Panorama", overview_peer_review_challenge_path(challenge), class: 'btn btn-default btn-sm' %>
              <%= link_to challenge.enabled? ? "Deshabilitar" : "Habilitar", toggle_peer_review_challenge_path(challenge), class: 'btn btn-default btn-sm' %>
              <%= link_to "Editar", edit_peer_review_challenge_path(challenge), class: 'btn btn-default btn-sm' %>
            <% end %>
            <% if policy(PeerReview::Challenge).purge? %>
              <%= link_to "Purgar", purge_peer_review_challenge_path(challenge), class: 'btn btn-danger btn-sm' %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</section>

<%= content_for :head do %>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
<% end %>

<%= content_for :javascript do %>
  <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="application/javascript"></script>

  <script type="application/javascript">
      $(function () {
          $('.challenges').DataTable({
              order: [[0, "asc"]],
              paging: false,
              language: {
                  url: "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
              },
              columnDefs: [{
                  targets: 'no-sort',
                  orderable: false
              }]
          });
      });
  </script>
<% end %>
