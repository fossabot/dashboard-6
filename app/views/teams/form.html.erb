<% nav_add 'Aula', '#' %>
<% nav_add 'Equipos', teams_path %>
<% nav_add 'Editar', '#' %>
<%= nav_render %>

<%= form_for @team do |f| %>

  <%= render :partial => 'shared/errors', locals: { f: f } %>

  <div class="form-group">
    <%= f.label :name, 'Nombre', class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :nickname, 'Nickname', class: 'control-label' %>
    <%= f.text_field :nickname, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, 'Imagen de perfil', class: 'control-label' %>
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit @labels.button, class: "btn btn-primary" %>
  </div>

<% end %>
