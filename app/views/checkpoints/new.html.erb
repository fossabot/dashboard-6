<legend>Nueva entrega</legend>

<%= form_for @checkpoint, url: create_checkpoint_url do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :link, 'Enlace' %>
    <%= f.text_field :link, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :due_date, 'Fecha de entrega' %>
    <%= f.date_select :due_date, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.submit "Crear entrega", class: "btn btn-primary" %>
  </div>

<% end %>
