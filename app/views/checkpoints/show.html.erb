<legend>Registrar entrega "<%= @checkpoint.name %>"</legend>

<%= form_for Check.new, url: register_checkpoint_url(@checkpoint.id) do |f| %>

  <%= f.hidden_field :checkpoint_id, value: @checkpoint.id %>

  <div class="form-group">
    <%= f.label :team_id, 'Equipo' %>
    <%= f.select :team_id, options_from_collection_for_select(@teams, :id, :name), {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :condition, 'Condicion' %>
    <%= f.select :condition, Check.conditions.to_a.reverse.to_h, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :comments, 'Comentarios' %>
    <%= f.text_area :comments, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Guardar registro de entrega", class: "btn btn-primary" %>
  </div>

<% end %>
